<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat con socket.io</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
  <link rel="stylesheet" href="./login.css">
</head>
<body>
  
  <div class="container">
    <main>
      <div class="jumbotron">
        <h2>Ingrese su Producto</h2>
        <form method="POST" id="userForm" action="/productos">
          <div class="form-group">
            <label  for="nombre">Nombre</label>
            <input id="name" type="text" class="form-control" name="nombre">
          </div>
          <div class="form-group">
            <label  for="precio">Precio</label>
            <input id="precio" type="number" class="form-control" name="precio">
          </div>
          <div class="form-group">
            <label for="foto">Foto</label>
            <input id="foto" type="url" class="form-control" name="foto">
          </div>
          <button  type="submit" class="btn btn-primary">Enviar</button>
        </form>

        <div>
          <% if (productos.length) { %>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Precio</th>
                  <th scope="col">Foto</th>
                </tr>
              </thead>
              <tbody>

                <% productos.forEach((producto, index) => { %>
                <tr>
                  <th scope="row"><%= index + 1%></th>
                  <td><%= producto.nombre %></td>
                  <td><%= producto.precio %></td>
                  <td><img class="img-fluid imgProduct" src="<%= producto.foto %>" alt=""></td>
                </tr>
                <% }) %>
                
              </tbody>
            </table>
          <% } else { %>
            No se encontraron datos
          <% } %>

        </div>
      </div>
    </main>
    <section class="vh-100 backgroundChat">
      <div class="container-fluid h-custom">
        <div class="row d-flex h-100">
          <div class="col-md-8 col-lg-6 col-xl-4">
            <form action="/chat" method="POST">
              <div class="d-flex flex-row">
                <p class="centerOfMessage">Centro de mensajes</p>
              </div>

              <br>
    
              <!-- Email input -->
              <div class="form-outline mb-4">
                <input type="text" name="username" id="form3Example3" class="form-control form-control-lg"
                  placeholder="pedro@gmail.com" />
              </div>
    
              <div class="text-center text-lg-start mt-4 pt-2">
                <button type="submit" class="btn btn-primary btn-lg"
                  style="padding-left: 2.5rem; padding-right: 2.5rem;">Entrar</button>
              </div>
    
            </form>
          </div>
        </div>
      </div>
      <%- include('partials/footer') %>
    </section>
  </div>
</body>
</html>